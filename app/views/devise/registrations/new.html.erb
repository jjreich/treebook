<div class="row">
  <div class="col-md-4">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: {class: "form-horizontal form-group well"} ) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>

        <legend>Sign Up</legend>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :profile_name %>
        <%= f.input :email, autofocus: true %>
        <%= f.input :password, autocomplete: "off" %>
        <%= f.input :password_confirmation, autocomplete: "off" %>

        <div><%= f.button :submit, "Sign up" %></div>

      </fieldset>

    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
